extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  .container.my-3 
    .row 
      .col-12 
        +box-head("List Products")
    
    .row.product-container
      each item in products
        .mb-3.card
          .product-item 
            .inner-image 
              img(class="img-product" src=item.thumbnail, alt=item.title)
            .inner-content 
              h3.inner-title #{item.title.substring(0, 20)}
              .inner-price-old #{item.price}$
              .inner-discount #{item.discountPercentage}%
              .inner-price-new.text-danger.display-4 #{item.newPrice}$